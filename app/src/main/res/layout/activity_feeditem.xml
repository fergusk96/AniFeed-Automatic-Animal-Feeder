<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="edu.upf.database.ListItemDetail">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:text="View Feed Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:focusable="true"
        android:textSize="24sp"
        android:textColorLink="?attr/actionModeSplitBackground"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:textAllCaps="true"
        android:textStyle="bold" />


    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mornRange"
        android:focusable="true"
        android:textSize="16sp"
        android:textColorLink="?attr/actionModeSplitBackground"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:textAllCaps="false"
        android:textStyle="bold" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lunRange"
        android:focusable="true"
        android:textSize="16sp"
        android:textColorLink="?attr/actionModeSplitBackground"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:textAllCaps="false"
        android:textStyle="bold" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dinRange"
        android:focusable="true"
        android:textSize="16sp"
        android:textColorLink="?attr/actionModeSplitBackground"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:textAllCaps="false"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Delete"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Remove Feed"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/Back"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Return"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/my_feedtextview"/>

</LinearLayout>